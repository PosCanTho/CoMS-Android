<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="cse.duytan.coms.activities.ReviewAbstract">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/ab_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>

        <TextView
            android:id="@+id/tvName"
            style="@style/tvRed12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chủ đề hội nghị tiểu bang (*):"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ab_layout" />

        <TextView
            android:id="@+id/txtChude_see_abs"
            android:layout_width="200dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Chọn chủ đề ..."
            style="@style/tvBlack16"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <Button
            android:id="@+id/btnChonchude_see_abs"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Chọn"
            android:textAllCaps="false"
            android:background="@drawable/shape_btn_choose_red"
            app:layout_constraintLeft_toRightOf="@+id/txtChude_see_abs"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <TextView
            android:id="@+id/textView15"
            style="@style/tvRed12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:text="Loại hình nghiên cứu (*):"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtChude_see_abs" />
        <TextView
            android:id="@+id/txtLoaihinhnghiencuu_see_abs"
            android:layout_width="200dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Chọn loại hình nghiên cứu ..."
            style="@style/tvBlack16"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <Button
            android:id="@+id/btnChonLoaihinhnghiencuu_send_abs"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Chọn"
            android:textAllCaps="false"
            android:background="@drawable/shape_btn_choose_red"
            app:layout_constraintLeft_toRightOf="@+id/txtLoaihinhnghiencuu_see_abs"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView18"
            style="@style/tvRed12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:text="Loại hình trình bày:"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLoaihinhnghiencuu_see_abs" />
        <TextView
            android:id="@+id/txtLoaihinhtrinhbay_see_abs"
            android:layout_width="200dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Chọn loại hình trình bày ..."
            style="@style/tvBlack16"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <Button
            android:id="@+id/btnChonLoaihinhtrinhbay_send_abs"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_btn_choose_red"
            android:text="Chọn"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@+id/txtLoaihinhtrinhbay_see_abs"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/txterr_chonloaihinhtrinhbay_send_abs"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/btnChonLoaihinhtrinhbay_send_abs"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="5dp"
            style="@style/tvRed12"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView21"
            style="@style/tvRed12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:text="Đánh giá:"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txterr_chonloaihinhtrinhbay_send_abs" />

        <EditText
            android:id="@+id/edNoidung_see_abs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Nhập nội dung đánh giá bài tóm tắt"
            android:inputType="textMultiLine"
            android:lines="6"
            style="@style/tvBlack16"
            android:textSize="14sp"
            android:scrollbars="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            style="@style/tvRed12"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edNoidung_see_abs"
            android:text="Tập tin đính kèm:" />
        <Button
            android:id="@+id/btnChonTaptin_send_abs"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_btn_choose_red"
            android:text="Xem tập tin"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            />

        <TextView
            android:id="@+id/txtTieude_duyetbai"
            style="@style/tvRed12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:text="Duyệt bài tóm tắt(*):"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnChonTaptin_send_abs" />


        <RadioGroup
            android:id="@+id/myRadioGroup_quatrinh_send_abs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/rd_tuchoi_send_abs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTieude_duyetbai">

            <RadioButton
                android:id="@+id/rd_tuchoi_send_abs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ chối" />

            <RadioButton
                android:id="@+id/rd_duyet_send_abs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duyệt bài" />
        </RadioGroup>


        <TextView
            android:id="@+id/txtTieude_Thangdiem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            style="@style/tvRed12"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myRadioGroup_quatrinh_send_abs"
            android:text="Thang điểm(*):" />

        <TextView
            android:id="@+id/txtThangDiem"
            style="@style/tvBlack16"
            android:layout_width="200dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Nhập điểm"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTieude_Thangdiem"
            android:layout_marginRight="8dp" />
        <Button
            android:id="@+id/btnDiem"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_btn_choose_red"
            android:text="Chọn"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@+id/txtThangDiem"
            app:layout_constraintTop_toBottomOf="@+id/txtTieude_Thangdiem" />


        <TextView
            android:id="@+id/txtTieude_Yeucau"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            style="@style/tvRed12"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDiem"
            android:text="Yêu cầu:" />

        <TextView
            android:id="@+id/txtYeucau"
            style="@style/tvBlack16"
            android:layout_width="200dp"
            android:layout_height="17dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Chọn yêu cầu"
            android:inputType="textPersonName"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTieude_Yeucau"
            android:layout_marginRight="8dp" />
        <Button
            android:id="@+id/btnYeucau"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_btn_choose_red"
            android:text="Chọn"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@+id/txtThangDiem"
            app:layout_constraintTop_toBottomOf="@+id/txtTieude_Yeucau" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>
