<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/padding24"
        android:layout_marginRight="@dimen/padding24">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/icon24"
            android:layout_height="@dimen/icon24"
            android:layout_gravity="center_vertical" />

        <cse.duytan.coms.customviews.CustomTextView
            android:id="@+id/tvName"
            style="@style/tvBlack14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:text="Ahihihihi"
            app:typeFace="@string/font_nunito_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="right">

            <cse.duytan.coms.customviews.CustomTextView
                style="@style/tvBlack10"
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="0dp"
                android:text="15"
                app:typeFace="@string/font_nunito_semibold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line1"
        android:layout_marginLeft="@dimen/padding24"
        android:layout_marginRight="@dimen/padding24"
        android:background="@color/gray_line" />

</LinearLayout>
