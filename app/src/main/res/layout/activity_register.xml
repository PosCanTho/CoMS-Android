<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cse.duytan.coms.activities.RegisterActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <cse.duytan.coms.models.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_test"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ibtnChooseAvatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_button_red_circle"
            android:padding="@dimen/padding10"
            app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
            app:layout_constraintLeft_toLeftOf="@+id/ivAvatar"
            app:layout_constraintTop_toTopOf="@+id/ivAvatar"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_plus_white_24dp" />

        <cse.duytan.coms.customviews.CustomTextView
            android:id="@+id/textView6"
            style="@style/tvBlack12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="50dp"
            android:text="@string/lbl_fullname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAvatar"
            app:typeFace="@string/font_roboto_regular" />

        <cse.duytan.coms.customviews.CustomEditText
            android:id="@+id/etFullname"
            style="@style/tvBlack14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:textColorHint="@color/gray_icon"
            android:ems="10"
            android:hint="Steve Jobs"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="@+id/textView6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:typeFace="@string/font_roboto_regular"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/red"
            app:layout_constraintLeft_toLeftOf="@+id/etFullname"
            app:layout_constraintRight_toRightOf="@+id/etFullname"
            app:layout_constraintTop_toBottomOf="@+id/etFullname" />

        <cse.duytan.coms.customviews.CustomTextView
            android:id="@+id/textView19"
            style="@style/tvBlack12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/lbl_email"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            app:typeFace="@string/font_roboto_regular" />

        <cse.duytan.coms.customviews.CustomEditText
            android:id="@+id/etEmail"
            style="@style/tvBlack14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:textColorHint="@color/gray_icon"
            android:hint="stevejobs@gmail.com"
            android:inputType="textEmailAddress"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView19"
            app:layout_constraintRight_toRightOf="@+id/etFullname"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            app:typeFace="@string/font_roboto_regular" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/red"
            app:layout_constraintLeft_toLeftOf="@+id/etEmail"
            app:layout_constraintRight_toRightOf="@+id/etEmail"
            app:layout_constraintTop_toBottomOf="@+id/etEmail"
            app:layout_constraintHorizontal_bias="0.0" />

        <cse.duytan.coms.customviews.CustomTextView
            android:id="@+id/textView21"
            style="@style/tvBlack12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:text="@string/lbl_username"
            app:layout_constraintLeft_toLeftOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/textView35"
            app:typeFace="@string/font_roboto_regular" />

        <cse.duytan.coms.customviews.CustomEditText
            android:id="@+id/etUsername"
            style="@style/tvBlack14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:hint="stevejobs"
            android:textColorHint="@color/gray_icon"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="@+id/etFullname"
            app:layout_constraintRight_toRightOf="@+id/etFullname"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:typeFace="@string/font_roboto_regular"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/red"
            app:layout_constraintLeft_toLeftOf="@+id/etUsername"
            app:layout_constraintRight_toRightOf="@+id/etUsername"
            app:layout_constraintTop_toBottomOf="@+id/etUsername"
            app:layout_constraintHorizontal_bias="0.0" />

        <cse.duytan.coms.customviews.CustomTextView
            android:id="@+id/textView23"
            style="@style/tvBlack12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/lbl_password"
            app:layout_constraintLeft_toLeftOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/textView22"
            app:typeFace="@string/font_roboto_regular" />

        <cse.duytan.coms.customviews.CustomEditText
            android:id="@+id/etPassword"
            style="@style/tvBlack14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:textColorHint="@color/gray_icon"
            android:inputType="textPassword"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/etFullname"
            app:layout_constraintRight_toRightOf="@+id/etFullname"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            app:typeFace="@string/font_roboto_regular" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/red"
            app:layout_constraintLeft_toLeftOf="@+id/etPassword"
            app:layout_constraintRight_toRightOf="@+id/etPassword"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"
            app:layout_constraintHorizontal_bias="0.0" />

        <cse.duytan.coms.customviews.CustomTextView
            android:id="@+id/textView25"
            style="@style/tvBlack12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/lbl_confirm_password"
            android:textColorHint="@color/gray_icon"
            app:layout_constraintLeft_toLeftOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            app:typeFace="@string/font_roboto_regular" />

        <cse.duytan.coms.customviews.CustomEditText
            android:id="@+id/etConfirmPassword"
            style="@style/tvBlack14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/etFullname"
            app:layout_constraintRight_toRightOf="@+id/etFullname"
            app:layout_constraintTop_toBottomOf="@+id/textView25"
            app:typeFace="@string/font_roboto_regular" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:background="@color/red"
            app:layout_constraintLeft_toLeftOf="@+id/etConfirmPassword"
            app:layout_constraintRight_toRightOf="@+id/etConfirmPassword"
            app:layout_constraintTop_toBottomOf="@+id/etConfirmPassword" />

        <Button
            android:id="@+id/btnRegister"
            style="@style/btnRedHeight48"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/title_register"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />

        <cse.duytan.coms.customviews.CustomTextView
            android:id="@+id/tvSignin"
            style="@style/tvBlack12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            android:text="@string/lbl_already_have_an_account_sign_up"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/btnRegister"
            app:layout_constraintRight_toRightOf="@+id/btnRegister"
            app:layout_constraintTop_toBottomOf="@+id/btnRegister"
            app:typeFace="@string/font_roboto_regular" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSignin" />

        <cse.duytan.coms.customviews.CustomTextView
            android:id="@+id/textView7"
            style="@style/tvBlack12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/lbl_gender"
            app:layout_constraintLeft_toLeftOf="@+id/etEmail"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:typeFace="@string/font_roboto_regular" />

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <RadioButton
                android:id="@+id/rBtnMale"
                style="@style/tvBlack12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_male" />

            <RadioButton
                android:id="@+id/rBtnFemale"
                style="@style/tvBlack12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding40"
                android:text="@string/lbl_female" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView35"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/red"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/rgGender"
            app:layout_constraintRight_toRightOf="@+id/etEmail"
            app:layout_constraintTop_toBottomOf="@+id/rgGender" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
