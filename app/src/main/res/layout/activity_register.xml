<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cse.duytan.coms.activities.RegisterActivity"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <cse.duytan.coms.models.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/ibtnChooseAvatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_button_red_circle"
            app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
            app:layout_constraintLeft_toLeftOf="@+id/ivAvatar"
            app:layout_constraintTop_toTopOf="@+id/ivAvatar"
            app:layout_constraintVertical_bias="0.0"
            android:padding="@dimen/padding10"
            app:srcCompat="@drawable/ic_plus_white_24dp" />

        <TextView
            android:id="@+id/textView6"
            style="@style/tvRed12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_fullname"
            android:textAllCaps="true"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/ivAvatar"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/etFullname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:hint="Steve Jobs"
            style="@style/tvBlack16"
            android:inputType="textPersonName"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView6"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:background="@color/red"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/etFullname"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/etFullname"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/etFullname" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_email"
            android:layout_marginLeft="0dp"
            style="@style/tvRed12"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="@+id/textView18"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="stevejobs@gmail.com"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:layout_marginTop="5dp"
            style="@style/tvBlack16"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView19"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/etFullname"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:background="@color/red"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/etEmail"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/etEmail" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_username"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:textAllCaps="true"
            style="@style/tvRed12"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView20" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@null"
            android:hint="stevejobs"
            style="@style/tvBlack16"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/etFullname"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/etFullname"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:background="@color/red"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/etUsername"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/etUsername"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/etUsername" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_password"
            android:layout_marginTop="24dp"
            style="@style/tvRed12"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/textView22"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView22" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@null"
            style="@style/tvBlack16"
            app:layout_constraintLeft_toLeftOf="@+id/etFullname"
            app:layout_constraintRight_toRightOf="@+id/etFullname"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="0dp"
            android:background="@color/red"
            android:layout_height="@dimen/line0.5"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/etPassword"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/etPassword"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_confirm_password"
            style="@style/tvRed12"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView24"
            tools:layout_editor_absoluteY="464dp"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/etFullname"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView25"
            android:layout_marginRight="0dp"
            android:background="@null"
            style="@style/tvBlack16"
            app:layout_constraintRight_toRightOf="@+id/etFullname"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:background="@color/red"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/etConfirmPassword"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/etConfirmPassword"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/etConfirmPassword" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_register"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            android:textAllCaps="false"
            style="@style/btnRedHeight48"
            app:layout_constraintTop_toBottomOf="@+id/textView26"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/tvSignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_already_have_an_account_sign_up"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/btnRegister"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btnRegister"
            android:layout_marginTop="24dp"
            android:textAllCaps="true"
            style="@style/tvRed12"
            app:layout_constraintTop_toBottomOf="@+id/btnRegister" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="0dp"
            android:layout_height="@dimen/line0.5"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSignin" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
