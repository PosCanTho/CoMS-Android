<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <cse.duytan.coms.customviews.CustomTextView
        app:typeFace="@string/font_nunito_regular"
        android:id="@+id/tvNO1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="1"
        android:gravity="center"
        android:textColor="@android:color/white"
        style="@style/tvWhite14"
        android:background="@drawable/bg_circle_red"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cse.duytan.coms.customviews.CustomTextView
            app:typeFace="@string/font_nunito_regular"
            android:id="@+id/tvNameConSess"
            style="@style/tvBlack16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conference Session 1"
            android:textAllCaps="true" />

        <cse.duytan.coms.customviews.CustomTextView
            app:typeFace="@string/font_nunito_regular"
            android:id="@+id/tvMainTopic"
            android:text="Conference Session Topic Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
