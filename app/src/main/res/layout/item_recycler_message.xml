<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <cse.duytan.coms.customviews.CustomTextView
        android:id="@+id/tvName"
        style="@style/tvBlack14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Steve Jobs"
        android:textColor="#4A4A4A"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar"
        app:layout_constraintRight_toLeftOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="parent"
        app:typeFace="@string/font_roboto_bold" />

    <cse.duytan.coms.models.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/avatar40"
        android:layout_height="@dimen/avatar40"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_test"
        app:layout_constraintBottom_toBottomOf="@+id/tvMessage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintVertical_bias="0.49" />

    <cse.duytan.coms.customviews.CustomTextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Do you want iphone 8, do you want iphone 8, do you want iphone 8."
        android:textSize="@dimen/size12"
        android:textColor="#757575"
        app:layout_constraintLeft_toLeftOf="@+id/tvName"
        app:layout_constraintRight_toLeftOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:typeFace="@string/font_roboto_regular"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="0dp"
        android:layout_height="@dimen/line1"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray_line"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage"
        app:layout_constraintLeft_toRightOf="@+id/ivAvatar" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_right_arrow" />
</android.support.constraint.ConstraintLayout>