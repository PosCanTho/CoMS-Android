<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="cse.duytan.coms.activities.SeeReviewActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/ab_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/LinearLayout1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ab_layout">

            <TextView
                android:id="@+id/txtTenhoinghi_see_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hội nghị khoa học kỹ thuật"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/transparent_black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFromdayToday_see_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Từ ngày:7/7/2017 đến 10/7/2017" />

                <TextView
                    android:id="@+id/txtStatus_see_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_green"
                    android:focusable="false"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTenbaitomtat_see_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bài tóm tắt: Tóm tắt 1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ngày đánh giá:" />

                        <TextView
                            android:id="@+id/txtNgaydanhgia_see_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="11/7/2017" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Người đánh giá:" />

                        <TextView
                            android:id="@+id/txtNguoidanhgia_see_review"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Lê Hoàng Dũng" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_see_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_account_circle" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                android:paddingLeft="8dp"
                app:layout_constraintTop_toBottomOf="@+id/LinearLayout1">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    style="@style/tvRed12"
                    android:text="Thể loại nghiên cứu:" />

                <TextView
                    android:id="@+id/txtLoaihinhnghiencuu_see_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/tvBlack16"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:text="Loại hình nghiên cứu 1" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    style="@style/tvRed12"
                    android:textAllCaps="true"
                    android:text="Thang điểm đánh giá:" />

                <TextView
                    android:id="@+id/txtThangdiem_see_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/tvBlack16"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:text="9" />

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    style="@style/tvRed12"
                    android:textAllCaps="true"
                    android:text="Yêu cầu:" />

                <TextView
                    android:id="@+id/txtYeucau_see_review"
                    style="@style/tvBlack16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Giải thích chính sách"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    style="@style/tvRed12"
                    android:textAllCaps="true"
                    android:text="Đánh giá:" />
                <TextView
                    android:id="@+id/txtReview_see_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:hint="Giải thích rõ chương 2, nghi ngờ đạo văn"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    style="@style/tvBlack16"
                    android:textSize="14sp"
                    android:scrollbars="vertical"/>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    style="@style/tvRed12"
                    android:textAllCaps="true"
                    android:text="Chủ đề tiểu bang:" />

                <TextView
                    android:id="@+id/txtReview_see_session_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:paddingTop="5dp"
                    android:textSize="14sp"
                    style="@style/tvBlack16"/>

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loại hình trình bày:"
                    android:paddingTop="8dp"
                    style="@style/tvRed12"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/txtReview_see_presentation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:paddingTop="5dp"
                    android:textSize="14sp"
                    style="@style/tvBlack16"/>
            </LinearLayout>
        </LinearLayout>



    </android.support.constraint.ConstraintLayout>
</ScrollView>