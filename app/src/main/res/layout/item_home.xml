<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <cse.duytan.coms.models.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_line_circle"
                android:src="@drawable/ic_test" />

            <!--<TextView-->
            <!--android:layout_width="56dp"-->
            <!--android:layout_height="56dp"-->
            <!--android:background="@drawable/bg_line_circle"-->
            <!--android:gravity="center"-->
            <!--android:text="AVATAR"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="12sp"-->
            <!--android:textStyle="bold" />-->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16sp"
            android:orientation="vertical">

            <cse.duytan.coms.customviews.CustomTextView
                android:id="@+id/tv_name_acccount_home"
                app:typeFace="@string/font_nunito_regular"
                style="@style/tvBlack16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steve Jobs"
                android:textSize="16sp"
                android:textStyle="bold" />

            <cse.duytan.coms.customviews.CustomTextView
                app:typeFace="@string/font_nunito_regular"
                android:id="@+id/tv_location_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New York"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right">

            <cse.duytan.coms.customviews.CustomTextView
                app:typeFace="@string/font_nunito_regular"
                android:id="@+id/tv_date_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="7/11/2017"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/avar"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/im_conference" />

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <cse.duytan.coms.customviews.CustomTextView
            app:typeFace="@string/font_nunito_regular"
            android:id="@+id/txtLikeInHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/like"
            android:gravity="center"
            android:text="like"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="italic|bold"/>

        <cse.duytan.coms.customviews.CustomTextView
            android:id="@+id/txtCommentInHome"
            app:typeFace="@string/font_nunito_regular"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/none_like"
            android:gravity="center"
            android:text="comt"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:textStyle="italic|bold"/>/>
    </LinearLayout>

    <cse.duytan.coms.customviews.CustomTextView
        android:id="@+id/customTextView"
        app:typeFace="@string/font_nunito_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:text="Bạn và 22 người nữa thích điều này !"
        android:textSize="12sp" />

    <cse.duytan.coms.customviews.CustomTextView
        android:id="@+id/textView2"
        app:typeFace="@string/font_nunito_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="Hảy đến và cảm nhận sự cuồng nhiệt"
        style="@style/tvBlack16"/>
</LinearLayout>
