        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgGuiBaocaoAbs_Daduyet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_send_paper_24px" />

        <TextView
            android:id="@+id/txtGuiBaocaoAbs_Daduyet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Gửi bài báo"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ln_listfunc_author_XemThongtin_Daduyet"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgXemThongtinAbs_Daduyet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_look_white_24px" />

        <TextView
            android:id="@+id/txtXemThongtinAbs_Daduyet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Xem bài tóm tắt"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ln_listfunc_author_XemDanhGia_Daduyet"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgXemDanhGiaAbs_Daduyet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_edit_abstract_24px" />

        <TextView
            android:id="@+id/txtXemDanhGiaAbs_Daduyet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Xem đánh giá"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <!-- Dòng  chờ duyệt-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ln_listfunc_author_RutBai_Choduyet"
        android:layout_weight="1"
